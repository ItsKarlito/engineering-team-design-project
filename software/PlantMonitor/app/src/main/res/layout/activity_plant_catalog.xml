<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".PlantCatalog.PlantCatalogActivity">

    <TextView
        android:id="@+id/textViewPlantDatabaseActivityTitle"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Plant Catalog"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="328dp"
        android:layout_height="412dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlantDatabaseActivityTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewPlantDatabaseActivityTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantDatabaseActivityTitle"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/buttonAddPlantCatalog"
        android:layout_width="271dp"
        android:layout_height="65dp"
        android:text="Add Plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.191" />

</androidx.constraintlayout.widget.ConstraintLayout>