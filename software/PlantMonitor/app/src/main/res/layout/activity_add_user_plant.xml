<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".UserPlants.AddUserPlantActivity">

    <TextView
        android:id="@+id/textViewAddUserPlantsActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Add Plant to User"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/textViewUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="userID"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddUserPlantsActivityTitle"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/textViewAddUserPlantsActivityTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddUserPlantsActivityTitle"
        app:layout_constraintVertical_bias="0.038" />

    <EditText
        android:id="@+id/editTextUserPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your Plant Name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewUserID"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/textViewUserID"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserID"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/textViewPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="plantName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUserPlantName"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/editTextUserPlantName"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserPlantName"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/textViewPlantIdealLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="plantIdealLight"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlantName"
        app:layout_constraintStart_toStartOf="@+id/textViewPlantName"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPlantIdealMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="plantIdealMoisture"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlantIdealLight"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/textViewPlantIdealLight"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantIdealLight"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPlantIdealTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="plantIdealTemperature"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlantIdealMoisture"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/textViewPlantIdealMoisture"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantIdealMoisture"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPlantDescription"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="plantDescription"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlantIdealTemperature"
        app:layout_constraintStart_toStartOf="@+id/textViewPlantIdealTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantIdealTemperature"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/buttonAddUserPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUserPlantName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextUserPlantName"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantDescription"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/buttonCancelPlantDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUserPlantName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextUserPlantName"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantDescription"
        app:layout_constraintVertical_bias="0.142" />

</androidx.constraintlayout.widget.ConstraintLayout>